%section.outer-container
  %section.inner-container

  = form_tag password_resets_path, class: 'password-reset-form js-user-form', method: :post  do
    
    %h2.center= t('user.reset_password')

    %section.input-container.js-input
      = email_field_tag :email, params[:email], placeholder: 'email'
      %aside
        %i.icon-email

    %section.input-container
      = link_to "#{t('login')}?", new_user_path

      = button_tag type: :submit do
        %i.icon-fire
        %span= t('user.reset_password')
