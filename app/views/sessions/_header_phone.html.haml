- if current_user.nil?
  %p
    %span.header-text Please log in.
  %a.login
    %i.fa.fa-rocket.fa-2x{title: 'CLICK ME GOD DAMN IT'}
- else
  = link_to logout_path, class: 'logout' do
    %i.fa.fa-unlock-alt.fa-2x{title: 'Log out'}
  = link_to user_polls_path(current_user) do
    %i.fa.fa-bar-chart-o.fa-2x{title: 'View your polls'}
  = link_to root_path do
    %i.fa.fa-pencil.fa-2x{title: 'New poll'}
  - if @poll && !@poll.new_record?
    = link_to @poll do
      %i.fa.fa-paper-plane-o.fa-2x{title: 'View poll'}

:javascript
  $(document).ready(function() {
    $('#main').trigger('header')
  })
