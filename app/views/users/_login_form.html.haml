= custom_form_for @user, url: {action: 'login'} do |f|
 
  %h2.center= t('login')
  
  = f.icon_field :email, placeholder: 'email', icon: 'email', type: 'email'
  = f.icon_field :password, placeholder: 'password', icon: 'lock', type: 'password'
 
  %section.input
    = link_to 'Register?', register_form_users_path, remote: true
    = f.submit t('login'), class: 'button'
